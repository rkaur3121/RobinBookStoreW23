@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Product List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Product</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table class="table table-dark table-bordered" id="tblData" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
                <th>Description</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{

    <script src="~/js/product.js"></script>
}